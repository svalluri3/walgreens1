@model IEnumerable<Walgreens.Models.Prescription>

@{
    ViewData["Title"] = "Prescriptions";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Prescriptions</h2>
    <a asp-controller="Prescription" asp-action="Add" class="btn btn-success">
        + Add Prescription
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>Medication Name</th>
                <th>Fill Status</th>
                <th>Cost</th>
                <th>Request Date</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MedicationName</td>
                <td>
                    @if (item.FillStatus == "Filled")
                    {
                        <span class="badge bg-success">Filled</span>
                    }
                    else if (item.FillStatus == "Pending")
                    {
                        <span class="badge bg-warning text-dark">Pending</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Cancelled</span>
                    }
                </td>
                <td>$@item.Cost.ToString("F2")</td>
                <td>@item.RequestDate.ToString("MM/dd/yyyy")</td>
                <td class="text-center">
                    <a asp-controller="Prescription" asp-action="Edit" asp-route-id="@item.PrescriptionId" class="btn btn-outline-primary btn-sm me-2">Edit</a>
                    <a asp-controller="Prescription" asp-action="Delete" asp-route-id="@item.PrescriptionId" class="btn btn-outline-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<div style="background-image: url('/Image/Walgreens-Logo-PNG-File.png'); background-position: center; background-repeat: no-repeat; padding: 200px 0;">
</div>
